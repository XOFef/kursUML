<Window x:Class="kurs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kurs"
        mc:Ignorable="d"
                    ResizeMode="CanMinimize"
    WindowState="Maximized"
    Title="Дерево Фано" Height="1080" Width="1920">
    <Grid >
        <StackPanel Background="#FF99B3CF" Height="150" VerticalAlignment="Top">
            <Label Height="auto" Width="auto" Content="Декодирование" FontSize="72" HorizontalAlignment="Center" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="0,10,0,0"/>
        </StackPanel>
        <Button  Height="90" Width="385" Content="Кодирование" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,25,0,0" BorderThickness="1" Background="#FF9A99CF" BorderBrush="White" Click="Button_Click"/>
        <TextBlock TextWrapping="Wrap"  Margin="408,323,0,0" VerticalAlignment="Top"  FontSize="36" HorizontalAlignment="Left" RenderTransformOrigin="0.501,0.626" Text="Введите цифры:" />
        <TextBox x:Name="tBox" PreviewTextInput="textBox_PreviewTextInput" HorizontalAlignment="Left" Margin="140,376,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="800" Height="292" FontSize="20" BorderThickness="2"/>
        <Button  Height="90" Content="Очистить" FontSize="40" VerticalAlignment="Top" Margin="140,721,0,0" BorderThickness="1" Background="#FF9A99CF" BorderBrush="White" Width="300" Click="Button_Clear" HorizontalAlignment="Left"/>
        <Button  Height="90" Content="Декодировать" FontSize="40" VerticalAlignment="Top" Margin="640,721,0,0" BorderThickness="1" Background="#FF9A99CF" BorderBrush="White" Width="300" HorizontalAlignment="Left" Click="Button_Click_2" />
        <Button Content="История" FontSize="40" Margin="100,0,0,75" BorderThickness="1" Background="#FF9A99CF" BorderBrush="White" Width="300" Height="90" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="Button_Click_1"/>
        <Label Height="auto" Width="auto" Content="Результат:" Margin="0,313,452,0" VerticalAlignment="Top"  FontSize="36" HorizontalAlignment="Right" RenderTransformOrigin="0.501,0.626"/>
        <TextBlock x:Name="tBlock" HorizontalAlignment="Right" Margin="0,376,140,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="800" Height="292" FontSize="20" />


    </Grid>
</Window>
